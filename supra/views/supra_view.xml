<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_contract_form_inherit" model="ir.ui.view">
        <field name="name">hr.contract.form.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='hr_responsible_id']" position="after">
                    <field name="Causales"/>
            </xpath>
        </field>
    </record>
    <record id="view_form_causales" model="ir.ui.view">
        <field name="name">Causales.form</field>
        <field name="model">causales</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_tree_causales" model="ir.ui.view">
        <field name="name">Causales.tree</field>
        <field name="model">causales</field>
        <field name="arch" type="xml">
            <tree>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="causales_action">
        <field name="name">Causales</field>
        <field name="res_model">causales</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem action="causales" 
    id="causales_menu_id"
    parent="hr.menu_human_resources_configuration"
    sequence="7"/>
</odoo>