<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_causales" model="ir.ui.view">
        <field name="name">Causales.form</field>
        <field name="model">causales</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_tree_causales" model="ir.ui.view">
        <field name="name">Causales.tree</field>
        <field name="model">causales</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="causales_action">
        <field name="name">Causales</field>
        <field name="res_model">causales</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem action="causales_action" 
    id="causales_menu_id"
    parent="hr.menu_human_resources_configuration"
    sequence="7"/>
    
</odoo>